generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ServiceType {
  LAMBDA
  EC2
  S3
}

enum MetricType {
  INVOCATIONS
  ERRORS
  LATENCY_MS
  CPU
  MEMORY
}

enum AlertType {
  COST
  ERROR_RATE
  LATENCY
}

model Project {
  id            String         @id @default(uuid())
  costSnapshots CostSnapshot[] @relation("ProjectCostSnapshots")
  name          String
  apiKey        String         @unique
  createdAt     DateTime       @default(now())

  services Service[]
  alerts   Alert[]
}

model Metric {
  id        String     @id @default(uuid())
  serviceId String
  type      MetricType
  value     Float
  timestamp DateTime   @default(now())

  service Service @relation(fields: [serviceId], references: [id])

  @@index([serviceId, timestamp])
}


model Service {
  id        String @id @default(uuid())
  projectId String
  name      String
  type      String

  costSnapshots CostSnapshot[]

  project Project  @relation(fields: [projectId], references: [id])
  metrics Metric[]

  @@unique([projectId, name], name: "projectId_name")
}

model CostSnapshot {
  id        String   @id @default(uuid())
  serviceId String
  costUSD   Float
  period    DateTime
  createdAt DateTime @default(now())

  service Service @relation(fields: [serviceId], references: [id])

  project   Project? @relation("ProjectCostSnapshots", fields: [projectId], references: [id])
  projectId String?

  @@index([serviceId, period])
}

model Alert {
  id        String    @id @default(uuid())
  projectId String
  type      AlertType
  threshold Float
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())

  project Project @relation(fields: [projectId], references: [id])
}
